﻿@model PagedList.IPagedList<ShopOnlineConnection.SanPham>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}





<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</a></li>
                    <li>@Html.ActionLink("Category", "Index", "Shop")</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div id="main-content" class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                <div class="product">
                                    <div class="image"><a href="@Url.Action("Details","Shop", new {id = @item.MaSanPham})"><img style="max-width: 163px; max-height: 300px;" src="~/Asset/images/@item.HinhChinh" /></a></div>
                                    <div class="buttons">
                                        <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                        <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                        <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                                    </div>
                                    <div class="caption">
                                        <div class="name"><h3><a href="@Url.Action("Details","Shop", new {id = @item.MaSanPham})">@item.TenSanPham</a></h3></div>
                                        <div class="price">@item.Gia USD</div>
                                        <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>


                <div class="row text-center">
                    <ul class="pagination">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </ul>
                </div>
            </div>
            <div id="sidebar" class="col-md-4">
                <div class="widget wid-categories">
                    <div class="heading"><h4>CATEGORIES</h4></div>
                    <div class="content">
                        <ul>
                            <li><a href="#">FOR MEN</a></li>
                            <li><a href="#">FOR WOMEN</a></li>
                            <li><a href="#">BEST SALES</a></li>
                            <li><a href="#">ANOTHER ITEMS</a></li>
                        </ul>
                    </div>
                </div>
                <div class="widget wid-type">
                    <div class="heading"><h4>TYPE</h4></div>
                    <div class="content">
                        <select>
                            <option value="LU" selected>LUXURY</option>
                            <option value="ST">STANDARD</option>
                            <option value="HC">HIGH-CLASS</option>

                        </select>
                    </div>

                    <div class="widget wid-discouts">
                        <div class="heading"><h4>DISCOUNTS</h4></div>
                        <div class="content">
                            <label class="checkbox"><input type="checkbox" name="discount" checked="">Upto - 10% (20)</label>
                            <label class="checkbox"><input type="checkbox" name="discount">40% - 50% (5)</label>
                            <label class="checkbox"><input type="checkbox" name="discount">30% - 20% (7)</label>
                            <label class="checkbox"><input type="checkbox" name="discount">10% - 5% (2)</label>
                            <label class="checkbox"><input type="checkbox" name="discount">Other(50)</label>
                        </div>
                    </div>
                    <div class="widget wid-brand">
                        <div class="heading"><h4>BRAND</h4></div>
                        <div class="content">
                            <label class="checkbox"><input type="checkbox" name="brand">GUCCI</label>
                            <label class="checkbox"><input type="checkbox" name="brand">ARMAF</label>
                            <label class="checkbox"><input type="checkbox" name="brand">ARMANI</label>
                            <label class="checkbox"><input type="checkbox" name="brand">VALENTINO</label>

                        </div>
                    </div>
                    <div class="widget wid-product">
                        <div class="heading"><h4>LATEST</h4></div>
                        <div class="content">
                            <div class="product">
                                <a href="#"><img src="~/Asset/images/gio.png" /></a>
                                <div class="wrapper">
                                    <h5><a href="#">GIORGIO ARMANI ACQUA DI GIO</a></h5>
                                    <div class="price">$170 <span>$120</span></div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                </div>
                            </div>
                            <div class="product">
                                <a href="#"><img src="~/Asset/images/gucci.png" /></a>
                                <div class="wrapper">
                                    <h5><a href="#">GUCCI GUILTY POUR HOME PARFURM</a></h5>
                                    <div class="price">$400 <span>$298</span></div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                </div>
                            </div>
                            <div class="product">
                                <a href="#"><img src="~/Asset/images/valentinov2.png" /></a>
                                <div class="wrapper">
                                    <h5><a href="#">VALENTINO DONNA BORN IN ROMA</a></h5>
                                    <div class="price">$200 <span>$150</span></div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

